{
  "name": "NB",
  "version": "1.0.0",
  "private": true,
  "author": "Fateen",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean:build": "lerna exec -- rimraf \"{.next,dist,build}\"",
    "dev:api": "yarn workspace @nb/api dev",
    "dev:admin": "yarn workspace @nb/admin dev",
    "build:api": "yarn workspace @nb/api build",
    "start:api": "yarn workspace @nb/api start",
    "serve:shop": "lerna run --parallel start"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css}": [
      "prettier --trailing-comma es5 --single-quote --write"
    ]
  }
}